<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>LoadStudentServlet</servlet-name>
        <servlet-class>cn.sgms.servlet.LoadStudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddStudentServlet</servlet-name>
        <servlet-class>cn.sgms.servlet.AddStudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExecScoreServlet</servlet-name>
        <servlet-class>cn.sgms.servlet.ExecScoreServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReqStudentNameServlet</servlet-name>
        <servlet-class>cn.sgms.servlet.ReqStudentNameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteScoreServlet</servlet-name>
        <servlet-class>cn.sgms.servlet.DeleteScoreServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetScoreNumServlet</servlet-name>
        <servlet-class>cn.sgms.servlet.GetScoreNumServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PageTableServlet</servlet-name>
        <servlet-class>cn.sgms.servlet.PageTableServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>LoadStudentServlet</servlet-name>
        <url-pattern>/sgms/LoadStudentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddStudentServlet</servlet-name>
        <url-pattern>/sgms/AddStudentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReqStudentNameServlet</servlet-name>
        <url-pattern>/sgms/ReqStudentNameServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExecScoreServlet</servlet-name>
        <url-pattern>/sgms/ExecScoreServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteScoreServlet</servlet-name>
        <url-pattern>/sgms/DeleteScoreServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetScoreNumServlet</servlet-name>
        <url-pattern>/sgms/GetScoreNumServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PageTableServlet</servlet-name>
        <url-pattern>/sgms/PageTableServlet</url-pattern>
    </servlet-mapping>


</web-app>